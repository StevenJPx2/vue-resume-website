{
    "AWSEBDockerrunVersion": 2,
    "volumes": [
        {
            "name": "data",
            "host": {
                "sourcePath": "/var/app/current/database"
            }
        },
        {
            "name": "client-vol",
            "host": {
                "sourcePath": "/var/app/current/client"
            }
        },
        {
            "name": "app-vol",
            "host": {
                "sourcePath": "/var/app/current/"
            }
        }


    ],
    "containerDefinitions": [
        {
            "name": "data-update",
            "image": "stevenjp/database",
            "memory": 128,
            "mountPoints": [
                {
                    "sourceVolume": "data",
                    "containerPath": "/database"
                }
            ],
            "environment": [
                {
                    "name": "GITHUB_USER",
                    "value": "stevenjpx2"
                }, 
                {
                    "name": "GITHUB_PASS",
                    "value": "tojqyb-0fisme-vUnbas"
                }
            ]
        },
        {
            "name": "my-api",
            "image": "stevenjp/my-api",
            "essential": true,
            "memory": 128,
            "portMappings": [
                {
                    "hostPort": 5000,
                    "containerPort": 5000
                }
            ],
            "links": [
                "data-update"
            ],
            "mountPoints": [
                {
                    "sourceVolume": "data",
                    "containerPath": "/database",
                    "readOnly": true
                },
                {
                    "sourceVolume": "app-vol",
                    "containerPath": "/app",
                    "readOnly": true
                }

            ]
        },
        {
            "name": "my-app",
            "image": "stevenjp/resume-website",
            "essential": true,
            "memory": 128,
            "portMappings": [
                {
                    "hostPort": 80,
                    "containerPort": 80
                }
            ],
            "links": [
                "my-api"
            ],
            "mountPoints": [
				{
					"sourceVolume": "client-vol",
					"containerPath": "/client",
					"readOnly": true
				}

            ]

        } 
    ]
}
